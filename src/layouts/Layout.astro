<style is:global>
  :root {
    --primary-color: #2563eb;
    --secondary-color: #1e40af;
    --background-color: #f8fafc;
    --card-background: #ffffff;
    --text-color: #1e293b;
    --text-muted: #64748b;
    --border-color: #e2e8f0;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    background-color: var(--background-color);
    color: var(--text-color);
    line-height: 1.6;
  }

  header {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    padding: 1.5rem;
    text-align: center;
  }

  header h1 {
    font-size: 2rem;
    margin: 0;
  }

  main {
    max-width: 1600px;
    margin: 2rem auto;
    padding: 0 1.5rem;
  }

  footer {
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
    border-top: 1px solid var(--border-color);
    margin-top: 2rem;
  }

  a {
    color: var(--primary-color);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Print styles to ensure hyperlinks work in PDF */
  @media print {
    body {
      background-color: white;
    }

    /* Ensure links are visible and clickable in PDF */
    a {
      color: #2563eb;
      text-decoration: underline;
    }

    /* Show link URLs after the text for reference */
    a[href^="http"]::after {
      content: " (" attr(href) ")";
      font-size: 0.8em;
      color: #64748b;
      word-break: break-all;
    }

    /* Don't show URLs for internal anchor links */
    a[href^="#"]::after {
      content: "";
    }

    /* Hide unnecessary elements in print */
    .left-sidebar,
    .right-column {
      display: none;
    }

    /* Adjust layout for print */
    .main-layout {
      display: block;
    }

    .center-column {
      width: 100%;
    }

    /* Ensure proper page breaks */
    .group-section {
      page-break-inside: avoid;
      break-inside: avoid;
    }

    .source-section {
      page-break-inside: avoid;
      break-inside: avoid;
      margin-bottom: 1.5rem;
    }

    /* Hide interactive elements */
    .expand-btn,
    .expand-section {
      display: none !important;
    }

    /* Show all entries in print (override hidden state) */
    .hidden-entry {
      display: block !important;
    }
  }
</style>
