---
import FeedItem from './FeedItem.astro';

export interface FeedEntry {
  title: string;
  link: string;
  pubDate?: string;
  description?: string;
}

export interface Props {
  name: string;
  entries: FeedEntry[];
}

const { name, entries } = Astro.props;

// Get base URL for links
const baseUrl = import.meta.env.BASE_URL;

// Create URL-friendly slug for the feed detail page
const feedUrl = `${baseUrl}feed/${encodeURIComponent(name)}`;

// Helper function to create URL-friendly IDs
function createId(text: string): string {
  return encodeURIComponent(text.replace(/\s+/g, '-'));
}
---

<div class="source-section" id={`source-${createId(name)}`}>
  <div class="source-header">
    <a href={feedUrl} class="source-title-link">
      <h3 class="source-title">{name}</h3>
      <span class="view-all">查看全部 →</span>
    </a>
    <span class="entry-count">{entries.length} 条内容</span>
  </div>
  <div class="entries-container">
    {entries.length > 0 ? (
      entries.map((entry) => (
        <FeedItem
          title={entry.title}
          link={entry.link}
          pubDate={entry.pubDate}
          description={entry.description}
        />
      ))
    ) : (
      <div class="no-entries">
        <p>该来源暂无最近内容</p>
      </div>
    )}
  </div>
</div>

<style>
  .source-section {
    background: var(--card-background);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .source-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
  }

  .source-title-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .source-title-link:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .source-title-link:hover .view-all {
    opacity: 1;
  }

  .source-title {
    font-size: 1.1rem;
    color: var(--primary-color);
    margin: 0;
  }

  .view-all {
    font-size: 0.8rem;
    color: var(--primary-color);
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .entry-count {
    font-size: 0.875rem;
    color: var(--text-muted);
    background: var(--background-color);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
  }

  .entries-container {
    display: grid;
    gap: 0.75rem;
  }

  .no-entries {
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
  }

  .no-entries p {
    margin: 0;
    font-size: 0.9rem;
  }
</style>
