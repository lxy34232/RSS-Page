---
export interface Props {
  title: string;
  link: string;
  pubDate?: string;
  description?: string;
}

const { title, link, pubDate, description } = Astro.props;

const formattedDate = pubDate ? new Date(pubDate).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit'
}) : '';
---

<article class="feed-item">
  <div class="feed-header">
    {formattedDate && <time datetime={pubDate}>{formattedDate}</time>}
  </div>
  <h4>
    <a href={link} target="_blank" rel="noopener noreferrer">{title}</a>
  </h4>
  {description && <p class="description" set:html={description} />}
</article>

<style>
  .feed-item {
    background: var(--background-color);
    border-radius: 6px;
    padding: 1rem;
    border-left: 3px solid var(--primary-color);
    transition: background-color 0.2s;
  }

  .feed-item:hover {
    background: var(--border-color);
  }

  .feed-header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 0.25rem;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    line-height: 1.4;
    font-weight: 500;
  }

  h4 a {
    color: var(--text-color);
  }

  h4 a:hover {
    color: var(--primary-color);
  }

  .description {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .description :global(img) {
    display: none;
  }

  /* Print styles for better PDF output */
  @media print {
    .feed-item {
      page-break-inside: avoid;
      break-inside: avoid;
      margin-bottom: 1rem;
      border-left: 2px solid #2563eb;
    }

    .feed-item:hover {
      background: var(--background-color);
    }

    h4 a {
      color: #2563eb;
      text-decoration: underline;
      font-weight: 600;
    }

    .description {
      display: block;
      -webkit-line-clamp: unset;
      overflow: visible;
    }
  }
</style>
